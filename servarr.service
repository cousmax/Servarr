[Unit]
Description=*arr Stack Media Automation
Requires=docker.service
After=docker.service
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/home/stephen/servarr
ExecStartPre=/bin/bash -c 'if ! mount | grep -q "/mnt/media"; then mount /mnt/media; fi'
ExecStart=/usr/bin/docker-compose up -d
ExecStop=/usr/bin/docker-compose down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
