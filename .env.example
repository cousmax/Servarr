# Docker Compose Environment Variables
# Copy this file to .env and modify as needed

# === User Configuration ===
PUID=1000
PGID=1000
TZ=America/New_York

# === NFS Configuration ===
NFS_SERVER=10.84.2.60
NFS_SHARE=/mnt/Pool1/MediaData
NFS_MOUNT_POINT=/mnt/media

# === Network ===
NETWORK_NAME=servarr

# === Service Ports ===
PROWLARR_PORT=9696
SONARR_PORT=8989
RADARR_PORT=7878
LIDARR_PORT=8686
READARR_PORT=8787
QBITTORRENT_PORT=8080
QBITTORRENT_LISTEN_PORT=6881
NZBGET_PORT=6789
BAZARR_PORT=6767
JELLYSEERR_PORT=5055
NOTIFIARR_PORT=5454
FLARESOLVERR_PORT=8191

# === Optional Overrides ===
# Uncomment and modify if needed
# DOCKER_CONFIG_PATH=./config
# DOCKER_DATA_PATH=/mnt/media

# === AirVPN Configuration ===
# VPN Provider Settings
VPN_SERVICE_PROVIDER=airvpn
VPN_TYPE=wireguard

# Mandatory, airvpn forwarded port
FIREWALL_VPN_INPUT_PORTS=port

# Copy all these variables from your generated configuration file
WIREGUARD_PUBLIC_KEY=key
WIREGUARD_PRIVATE_KEY=key
WIREGUARD_PRESHARED_KEY=key
WIREGUARD_ADDRESSES=ip

# Optional location variables, comma separated list, no spaces after commas
SERVER_COUNTRIES=country
SERVER_CITIES=city

# Health check duration
HEALTH_VPN_DURATION_INITIAL=120s
